<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_4"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:id="@+id/byq_title"
                android:textSize="@dimen/dp_16"
                android:textColor="#333333"
                />

            <ImageView
                android:id="@+id/byq_xs"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_toLeftOf="@+id/byq_xsnum"
                android:src="@drawable/h_currency" />

            <TextView
                android:id="@+id/byq_xsnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="数量"
                android:textColor="#d92109"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:id="@+id/byq_time"
            android:textSize="@dimen/dp_10"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容"
            android:id="@+id/byq_mess"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_12"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:lineHeight="@dimen/dp_20"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            >

            <TextView
                android:id="@+id/title_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/title_adv"
                android:text="收集"
                android:textColor="#333333"
                android:textSize="@dimen/dp_10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="建议"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_10"
                android:textColor="#333333"
                android:id="@+id/title_adv"
                android:layout_marginRight="@dimen/dp_20"
                />
        </RelativeLayout>
    </LinearLayout>
</layout>