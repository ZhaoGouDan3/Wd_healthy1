<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_background" />
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_100"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mytx"
                    android:src="@mipmap/ic_launcher"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_16"
                android:textColor="#ffffff"
                android:text="昵称"
                android:layout_marginLeft="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_95"
                android:id="@+id/myname"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/common_nav_message_black_n"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30"
                android:id="@+id/mynotify"
                />
            <Button
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_30"
                android:text="签到"
                android:textSize="@dimen/dp_14"
                android:textColor="#3087ea"
                android:background="@drawable/qd"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_90"
                android:layout_marginRight="@dimen/dp_20"
                />

            <LinearLayout
                android:id="@+id/mid"
                android:layout_width="@dimen/dp_320"
                android:layout_height="@dimen/dp_170"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_160"
                android:layout_marginRight="@dimen/dp_20"
                android:alpha="0.9"
                android:background="@drawable/mylinear"
                android:orientation="vertical"
                android:shadowRadius="10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="我的问诊"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_16" />

                <LinearLayout
                    android:id="@+id/current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/the_current_inquiry" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="当前问诊"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_140"
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@drawable/my_icon_next_n" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/historical_inquiry" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="历史问诊"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_14" />

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_140"
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@drawable/my_icon_next_n" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/myfile"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/my_icon_file_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的档案"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mypocket"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid"
                android:layout_marginLeft="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/my_icon_wallet_n"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的钱包"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mycol"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid"
                android:layout_marginLeft="@dimen/dp_270"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/common_button_collection_large_n"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的收藏"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myyj"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_120"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/my_icon_advice_n"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="被采纳建议"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12"

                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myvideo"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid"
                android:layout_marginLeft="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_120"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/my_icon_video_n"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的视频"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mybyq"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid"
                android:layout_marginLeft="@dimen/dp_270"
                android:layout_marginTop="@dimen/dp_120"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/my_icon_circle_n"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的病友圈"

                    android:textColor="#333333"
                    android:textSize="@dimen/dp_10" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/myattention"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_210"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/common_icon_attention_large_n"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的关注"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mytask"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid"
                android:layout_marginLeft="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_210"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/my_icon_task_n"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="我的任务"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/mysetting"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mid"
                android:layout_marginLeft="@dimen/dp_270"
                android:layout_marginTop="@dimen/dp_210"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:src="@drawable/my_icon_set_n"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="设置管理"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_below="@+id/mytask"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_alignParentBottom="true"
                   android:layout_marginTop="@dimen/dp_20"
                   android:layout_marginBottom="@dimen/dp_20"
                   android:gravity="center"
                   android:text="©八维移动通信学院毕业作品"
                   android:textColor="#666666"
                   android:textSize="@dimen/dp_14" />
           </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</layout>