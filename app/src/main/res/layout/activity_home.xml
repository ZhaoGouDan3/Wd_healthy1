<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        >
        <com.wd.wd_healthy.model.util.NoSwipeViewPage
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:id="@+id/home_vp"
            />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_60"
          android:layout_alignParentBottom="true"
          android:clipChildren="false"
          android:background="@drawable/the_bottom_bar"
          >
          <RadioGroup
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_60"
              android:id="@+id/home_rg"
              android:orientation="horizontal"
              android:clipChildren="false"
              android:background="@null"
              >
              <RadioButton
                  android:layout_width="@dimen/dp_30"
                  android:layout_height="@dimen/dp_30"
                  android:drawableTop="@drawable/homerbt"
                  android:button="@null"
                  android:layout_weight="1"
                  android:background="@null"
                  android:checked="true"
                  android:id="@+id/rbt1"
                  android:layout_marginTop="-30dp"
                  />
              <RadioButton
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:drawableTop="@drawable/homerbt2"
                  android:button="@null"
                  android:layout_weight="0.5"
                  android:background="@null"
                  android:id="@+id/rbt2"
                  android:layout_marginTop="-30dp"
                  />
              <RadioButton
                  android:layout_width="@dimen/dp_30"
                  android:layout_height="@dimen/dp_30"
                  android:drawableTop="@drawable/homerbt3"
                  android:button="@null"
                  android:layout_weight="1"
                  android:background="@null"
                  android:id="@+id/rbt3"
                  android:layout_marginTop="-30dp"
                  />
          </RadioGroup>
      </LinearLayout>
    </RelativeLayout>
</layout>