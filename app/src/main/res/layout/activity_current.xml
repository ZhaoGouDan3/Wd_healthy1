<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:id="@+id/yda"
               android:visibility="visible"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="我的档案"
                   android:gravity="center"
                   android:textSize="@dimen/dp_18"
                   android:textStyle="bold"
                   android:layout_marginTop="@dimen/dp_10"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="[主要症状]"
                   android:layout_marginTop="@dimen/dp_20"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:textSize="@dimen/dp_12"
                   android:textColor="#3087ea"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20"
                   android:text="内容"
                   android:textSize="@dimen/dp_12"
                   android:textColor="#999999"
                   android:id="@+id/zyzz"
                   android:layout_marginBottom="@dimen/dp_10"
                   />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/dp_12"
                   android:layout_marginTop="@dimen/dp_10"
                   android:textColor="#999999"
                   android:id="@+id/zyzzed"
                   android:hint="请输入您的主要症状"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20"
                   android:theme="@style/MyEditText"
                   android:visibility="gone"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="[现病史]"
                   android:layout_marginTop="@dimen/dp_20"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:textSize="@dimen/dp_12"
                   android:textColor="#3087ea"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20"
                   android:text="内容"
                   android:textSize="@dimen/dp_12"
                   android:textColor="#999999"
                   android:id="@+id/xbs"
                   android:layout_marginBottom="@dimen/dp_10"
                   />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/dp_12"
                   android:layout_marginTop="@dimen/dp_10"
                   android:textColor="#999999"
                   android:id="@+id/xbsed"
                   android:hint="请输入您的当前病状"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20"
                   android:theme="@style/MyEditText"
                   android:visibility="gone"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="[既往病史]"
                   android:layout_marginTop="@dimen/dp_20"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:textSize="@dimen/dp_12"
                   android:textColor="#3087ea"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20"
                   android:text="内容"
                   android:textSize="@dimen/dp_12"
                   android:textColor="#999999"
                   android:id="@+id/jwbs"
                   android:layout_marginBottom="@dimen/dp_10"
                   />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/dp_12"
                   android:layout_marginTop="@dimen/dp_10"
                   android:textColor="#999999"
                   android:id="@+id/jwbsed"
                   android:hint="请输入您的既往病史"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20"
                   android:theme="@style/MyEditText"
                   android:visibility="gone"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="[治疗经历]"
                   android:layout_marginTop="@dimen/dp_20"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:textSize="@dimen/dp_12"
                   android:textColor="#3087ea"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20"
                   android:text="内容"
                   android:textSize="@dimen/dp_12"
                   android:textColor="#999999"
                   android:id="@+id/zljl"
                   android:layout_marginBottom="@dimen/dp_10"
                   />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/dp_12"
                   android:layout_marginTop="@dimen/dp_10"
                   android:textColor="#999999"
                   android:id="@+id/yymced"
                   android:hint="请输入医院名称"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20"
                   android:theme="@style/MyEditText"
                   android:visibility="gone"
                   />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:text="请输入治疗开始到结束的时间"
                    android:layout_marginLeft="@dimen/dp_20"
                    />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/dp_12"
                   android:layout_marginTop="@dimen/dp_10"
                   android:textColor="#999999"
                   android:id="@+id/zlgced"
                   android:hint="请输入治疗过程"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:layout_marginRight="@dimen/dp_20"
                   android:theme="@style/MyEditText"
                   android:visibility="gone"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="[相关图片]"
                   android:layout_marginTop="@dimen/dp_20"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:textSize="@dimen/dp_12"
                   android:textColor="#3087ea"
                   android:id="@+id/abimg"
                   />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <ImageView
                       android:layout_width="@dimen/dp_320"
                       android:layout_height="@dimen/dp_144"
                       android:src="@mipmap/ic_launcher"
                       android:layout_marginLeft="@dimen/dp_20"
                       android:layout_marginTop="@dimen/dp_20"
                       android:id="@+id/img1"
                       android:scaleType="fitXY"
                       />

               </LinearLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >

                   <Button
                       android:id="@+id/delete"
                       android:layout_width="@dimen/dp_84"
                       android:layout_height="@dimen/dp_34"
                       android:layout_marginLeft="@dimen/dp_60"
                       android:layout_marginTop="@dimen/dp_30"
                       android:background="@drawable/delete"
                       android:text="删除"
                       android:textColor="#ffffff"
                       android:textSize="@dimen/dp_14" />
                   <Button
                       android:layout_width="@dimen/dp_84"
                       android:layout_height="@dimen/dp_34"
                       android:id="@+id/bj"
                       android:text="编辑"
                       android:layout_marginLeft="@dimen/dp_60"
                       android:layout_marginTop="@dimen/dp_30"
                       android:background="@drawable/bj"
                       android:textColor="#ffffff"
                       android:textSize="@dimen/dp_14"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="@dimen/dp_60"
                       />

               </RelativeLayout>
               <Button
                   android:layout_width="@dimen/dp_300"
                   android:layout_height="wrap_content"
                   android:id="@+id/bc"
                   android:textColor="#ffffff"
                   android:text="保存"
                   android:layout_gravity="center"
                   android:layout_marginTop="@dimen/dp_50"
                   android:background="@drawable/login"
                   />
           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/nda"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="@dimen/dp_126"
                    android:layout_height="@dimen/dp_135"
                    android:src="@drawable/no_message"
                    android:layout_marginTop="@dimen/dp_150"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无档案"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_30"
                    android:textColor="#333333"
                    />
                <Button
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="wrap_content"
                    android:id="@+id/tj"
                    android:textColor="#ffffff"
                    android:text="添加"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_150"
                    android:background="@drawable/login"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>