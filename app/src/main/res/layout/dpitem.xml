<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="@dimen/dp_20"
        >
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/dp_img"
            android:layout_marginTop="@dimen/dp_20"
            />
        <RelativeLayout
            android:layout_width="@dimen/dp_260"
            android:layout_height="wrap_content"
            android:background="@drawable/left2"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="名称"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/dp_name"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/common_icon_inquiry_n"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/dp_doc"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容"
                android:id="@+id/dp_mess"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:lineHeight="@dimen/dp_16"
                android:textSize="@dimen/sp_12"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_below="@+id/dp_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dp_mess"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_11"
                android:text="时间"
                android:id="@+id/dp_time"
                android:textColor="#333333"
                android:textSize="@dimen/sp_10" />
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_toLeftOf="@+id/agree"
                android:layout_below="@+id/dp_mess"
                android:layout_marginTop="@dimen/dp_18"
                android:src="@drawable/common_icon_agree_n"
                android:id="@+id/agree_img"
                android:layout_marginRight="@dimen/dp_6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dp_mess"
                android:layout_marginRight="@dimen/sp_10"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_toLeftOf="@+id/dis_img"
                android:text="0"
                android:id="@+id/agree"
                />
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_toLeftOf="@+id/disagree"
                android:layout_below="@+id/dp_mess"
                android:layout_marginTop="@dimen/dp_18"
                android:src="@drawable/common_icon_disagree_n"
                android:id="@+id/dis_img"
                android:layout_marginRight="@dimen/dp_6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dp_mess"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/sp_10"
                android:layout_marginTop="@dimen/dp_18"
                android:text="0"
                android:id="@+id/disagree"
                />
        </RelativeLayout>
    </LinearLayout>
</layout>