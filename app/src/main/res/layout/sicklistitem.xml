<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="标题"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold"
            android:id="@+id/sick_title"
            />
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/message_icon_close_n"
            android:layout_alignParentRight="true"
            android:id="@+id/sick_close"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/dp_12"
            android:textColor="#333333"
            android:text="内容"
            android:id="@+id/sick_mess"
            android:layout_below="@+id/sick_title"
            android:layout_marginTop="@dimen/dp_14"
            android:height="@dimen/dp_20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sick_scnum"
            android:text="收藏"
            android:layout_below="@+id/sick_mess"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:textSize="@dimen/dp_10"
            android:textColor="#333333"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sick_advice"
            android:text="建议"
            android:layout_below="@+id/sick_mess"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_16"
            android:textSize="@dimen/dp_10"
            android:textColor="#333333"
            android:layout_toRightOf="@+id/sick_scnum"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sick_time"
            android:text="时间"
            android:textColor="#333333"
            android:textSize="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@+id/sick_mess"
            android:layout_marginTop="@dimen/dp_16"
            />
    </RelativeLayout>
</layout>