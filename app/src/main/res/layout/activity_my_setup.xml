<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_62"
            android:background="@drawable/setup"
            android:layout_marginTop="@dimen/dp_4"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                app:cardCornerRadius="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:id="@+id/cardview"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/setuptx"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_toRightOf="@+id/cardview"
                android:text="名称"
                android:id="@+id/setup_name"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14" />

            <ImageView
                android:id="@+id/mymess"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/my_icon_next_n" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="修改密码"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/my_icon_next_n"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/update_pwd"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="清除缓存"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缓存大小"
                android:id="@+id/hctxt"
                android:layout_toLeftOf="@+id/clear_cache"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_14"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/dp_0_5"
                />
            <ImageView
                android:id="@+id/clear_cache"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/my_icon_next_n" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="屏幕亮度"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/my_icon_next_n"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/screen_lock"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="版本检测"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/my_icon_next_n"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/version_detect"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="帮助中心"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/my_icon_next_n"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/helper_center"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="关于我们"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/my_icon_next_n"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/about_us"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="邀请好友"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/my_icon_next_n"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/invite_friend"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="退出登录"
                android:textColor="#d92109"
                android:id="@+id/unlogin"
                android:textSize="@dimen/dp_14" />
        </RelativeLayout>

    </LinearLayout>
</layout>