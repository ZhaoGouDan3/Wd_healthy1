<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:orientation="vertical"
        android:id="@+id/first"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="标题"
            android:id="@+id/home_item2_title"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/home_item2_title"
            android:id="@+id/img"
            android:layout_marginLeft="@dimen/dp_20"
            >
            <ImageView
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_74"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:id="@+id/home_item2_img1"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_12"
                />
            <ImageView
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_74"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:id="@+id/home_item2_img2"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_toRightOf="@+id/home_item2_img1"
                />
            <ImageView
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_74"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:id="@+id/home_item2_img3"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_toRightOf="@+id/home_item2_img2"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/img"
            android:layout_marginLeft="@dimen/dp_20"
            >

            <TextView
                android:id="@+id/home_item2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="#333333"
                android:textSize="@dimen/dp_10"

                />

            <TextView
                android:id="@+id/home_item2_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_200"
                android:layout_alignParentRight="true"
                android:text="时间"
                android:textSize="@dimen/dp_10" />
        </RelativeLayout>
    </RelativeLayout>
</layout>