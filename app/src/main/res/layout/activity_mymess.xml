<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_62"
            android:background="@drawable/setup"
            android:layout_marginTop="@dimen/dp_4"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                app:cardCornerRadius="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:id="@+id/cardview"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/messtx"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_22"
                android:text="头像"
                android:id="@+id/mess_name"
                android:textColor="#333333"
                android:textSize="@dimen/dp_14" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="昵称"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_12"
                android:textColor="#333333"
                android:text="名字"
                android:layout_toLeftOf="@+id/upname"
                android:layout_marginTop="@dimen/dp_12"
                android:id="@+id/nick_name"
                />

            <ImageView
                android:id="@+id/upname"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/my_icon_next_n" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="性别"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:textSize="@dimen/dp_12"
                android:textColor="#333333"
                android:layout_toLeftOf="@+id/upsexy"
                android:id="@+id/sexy"
                android:layout_marginTop="@dimen/dp_12"
                android:src="@drawable/common_icon_girl_n"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/my_icon_next_n"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/upsexy"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="体征"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toLeftOf="@+id/messtz"
                android:text="身高 体重 年龄"
                android:textColor="#333333"
                android:id="@+id/tz"
                android:textSize="@dimen/dp_12" />

            <ImageView
                android:id="@+id/messtz"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/my_icon_next_n" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:text="邮箱"
                android:textSize="@dimen/dp_14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="邮箱"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/mess_email"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:text="绑定微信"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/bdwx"
                android:text="去绑定"
                android:textColor="#333333"
                android:textSize="@dimen/dp_12" />

            <ImageView
                android:id="@+id/bdwx"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/my_icon_next_n" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="实名认证"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/smrz"
                android:text="去实名"
                android:textColor="#333333"
                android:textSize="@dimen/dp_12" />

            <ImageView
                android:id="@+id/smrz"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/my_icon_next_n" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="绑定银行卡"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/bdbank"
                android:text="去绑定"
                android:textColor="#333333"
                android:textSize="@dimen/dp_12" />

            <ImageView
                android:id="@+id/bdbank"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/my_icon_next_n" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_4"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="绑定人脸"
                android:textSize="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_15"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/bdface"
                android:text="去绑定"
                android:textColor="#333333"
                android:textSize="@dimen/dp_12" />

            <ImageView
                android:id="@+id/bdface"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/my_icon_next_n" />
        </RelativeLayout>
    </LinearLayout>
</layout>