<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:id="@+id/pxtab"
                app:tabSelectedTextColor="#d92109"
                app:tabIndicatorColor="#d92109"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                >
                <ImageView
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_200"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:id="@+id/doc_img"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_14"
                        android:text="名称"
                        android:layout_marginTop="@dimen/dp_9"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="#333333"
                        android:id="@+id/doc_name"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_10"
                        android:text="职位"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="#333333"
                        android:id="@+id/doc_job"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_20"
                    >

                    <TextView
                        android:id="@+id/doc_hos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="医院"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_12" />
                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@drawable/common_icon_comment_large_n"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_20"
                        android:id="@+id/doc_detail"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_12"
                        android:text="好评率"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="#333333"
                        android:id="@+id/doc_hp"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp_12"
                        android:text="服务患者数"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="#333333"
                        android:id="@+id/doc_num"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    >
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/b2"
                        android:layout_weight="1"
                        android:text="500H币/次"
                        />
                    <Button
                        android:layout_width="@dimen/dp_98"
                        android:layout_height="match_parent"
                        android:background="@drawable/b1"
                        android:text="立即咨询"
                        android:id="@+id/zx_now"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/dp_16"

                        />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/doc_rv"
                    android:layout_marginTop="@dimen/dp_18"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</layout>